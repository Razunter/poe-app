{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "types": [
      "@types/node",
      "@types/express"
    ],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "api/**/*.ts",
    "src/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
